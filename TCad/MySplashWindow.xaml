<Window
    x:Class="TCad.MySplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TCad"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="428.107"
    Height="267"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml" />
                <ResourceDictionary Source="Resources/Images.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#ff424247">
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="40" />
            <RowDefinition Height="30" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="40*" />
                <ColumnDefinition  Width="50*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Padding="40,40,0,10" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Image
                    Source="{StaticResource traiangle2DrawingImage}"
                />
            </Border>

            <Label
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Content="TCad"
                FontSize="40"
                Foreground="{StaticResource SplashAppTitleColor}"
                />
        </Grid>

        <Rectangle Grid.Row="1" Width="30" Height="30" Stroke="AliceBlue" StrokeThickness="2">
            <Rectangle.RenderTransform>
                <RotateTransform CenterX="15" CenterY="15" Angle="20"/>
            </Rectangle.RenderTransform>

            <Rectangle.Triggers>
                <EventTrigger  RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Rectangle.RenderTransform).(RotateTransform.Angle)"
                                        To="360" Duration="0:0:3"
                                        RepeatBehavior="Forever">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase Power="5" EasingMode="EaseInOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Rectangle.Triggers>
        </Rectangle>

        <Label
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Version 0.8"
            FontSize="14"
            Foreground="PaleGreen" />
        <Label
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Copyright 2025 Tsuyoshi Kuroki All Rights Reserved."
            FontSize="12"
            Foreground="DarkGray" />
    </Grid>
</Window>
